<!--- Shows a single trip --->
<p><%= @trip.trip_title %></p>
<p><%= @trip.country %></p>
<p><%= @trip.city %></p>
<p><%= @trip.date_visited %></p>
<p><%= @trip.category %></p>
    <% @trip.highlights.each do |highlight| %>
        <p><%= highlight.highlight_category %></p>
        <p><%= highlight.place %></p>
        <p><%= highlight.notes %></p>
    <% end %>

<form method="post" action="/trips/<%= @trip.id %>">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Trip">
</form>
